<UserControl
    x:Name="lateralMenu"
    x:Class="TCC_Aline.UserControls.LateralMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TCC_Aline.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <RelativePanel>
        <RelativePanel x:Name="mainContent"
                Background="{Binding ElementName=lateralMenu,Path=Background}"
                Width="{Binding ElementName=lateralMenu,Path=RealWidth}"
                RelativePanel.AlignBottomWithPanel="True" 
                RelativePanel.AlignTopWithPanel="True" 
                RelativePanel.AlignRightWithPanel="True">
            <ContentPresenter RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" Content="{Binding ElementName=lateralMenu,Path=PaneContent}"/>
        </RelativePanel>
    </RelativePanel>
</UserControl>
