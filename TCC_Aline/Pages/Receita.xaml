                        </ListView.ItemTemplate>
                    </ListView>-->
                    <TextBox x:Name="comentario" Width="430" Height="110" RelativePanel.Below="quantPessoas" Margin="0,5,0,0"/>
                </RelativePanel>
            </Grid>
            <Grid Grid.Column="1"  Margin="50,0,0,0" Padding="0,56,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="ingredientesRow" Height="1*"/>
                    <RowDefinition Height="1.68*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ListViewHeaderItem Grid.Row="0" Style="{StaticResource noLine}" >
                        <TextBlock Text="Ingredientes" Style="{StaticResource SubheaderTextBlockStyle}" FontSize="20" FontWeight="SemiBold" Foreground="#646464"/>
                    </ListViewHeaderItem>
                    <ListView Grid.Row="1" SelectionMode="None" ItemsSource="{x:Bind recpt.IngredientesCollection}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:IngredienteData">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{x:Bind Path=QuantidadeCalculada, Mode=OneWay}" Foreground="#646464" FontSize="17"/>
                                    <TextBlock Text="{x:Bind Path=Texto, Mode=TwoWay}" Foreground="{x:Bind Path=SubstitutosCollection,Converter={StaticResource ColorConverter}}" FontSize="17" Tapped="TextBlock_Tapped">
                                        <FlyoutBase.AttachedFlyout>
                                            <Flyout>
                                                <ListView ItemsSource="{x:Bind SubstitutosCollection}" SelectionChanged="ListView_SelectionChanged">
                                                    <ListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock  FontSize="17" Text="{Binding}"/>
                                                        </DataTemplate>
                                                    </ListView.ItemTemplate>
                                                </ListView>
                                            </Flyout>
                                        </FlyoutBase.AttachedFlyout>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ListViewHeaderItem Grid.Row="0" Style="{StaticResource noLine}">
                        <TextBlock Text="Modo de Preparo" Style="{StaticResource SubheaderTextBlockStyle}" FontSize="20" Foreground="#646464" FontWeight="SemiBold"/>
                    </ListViewHeaderItem>
                    <ListView Grid.Row="1" SelectionMode="None">
                        <ListViewItem>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Justify" MaxWidth="620"  Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind recpt.Modopreparo}" FontSize="17" Foreground="#646464" Padding="2">
                            </TextBlock>
                        </ListViewItem>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
        <controls:LateralMenu x:Name="lateralMenu" Height="460" Visibility="Visible" Margin="0,56,0,0" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignRightWithPanel="True" PaneClosedWidth="100" PaneOpenWidth="{x:Bind Path=OpenWidth,Mode=TwoWay}" IsOpen="False" Background="#99b5cb" FlyoutBase.AttachedFlyout="{StaticResource info}">
            <controls:LateralMenu.PaneContent>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" x:Name="dicasMedida" Tapped="dicasMedida_Tapped" PointerPressed="dicasMedida_PointerPressed" PointerReleased="dicasMedida_PointerReleased">
                            <Image  Source="ms-appx:///Assets/Images/MenuDireito/menu_lateral_dicas_de_medidas.png" VerticalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" x:Name="glossario" Tapped="glossario_Tapped" PointerPressed="glossario_PointerPressed" PointerReleased="glossario_PointerReleased" >
                            <Image  Source="ms-appx:///Assets/Images/MenuDireito/menu_lateral_glossario.png" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" x:Name="tecnicas" Tapped="tecnicas_Tapped" PointerPressed="tecnicas_PointerPressed" PointerReleased="tecnicas_PointerReleased">
                            <Image  Source="ms-appx:///Assets/Images/MenuDireito/menu_lateral_tecnicas.png" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Row="3" x:Name="timer" Tapped="timer_Tapped" PointerPressed="timer_PointerPressed" PointerReleased="timer_PointerReleased">
                            <Image  Source="ms-appx:///Assets/Images/MenuDireito/menu_lateral_timer.png" VerticalAlignment="Center"/>
                        </StackPanel>                     
                    </Grid>
                    <Frame x:Name="lateralMenuFrame" Grid.Column="1" ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid>
            </controls:LateralMenu.PaneContent>
        </controls:LateralMenu>
