                    <ToggleButton.Content>
                        <SymbolIcon Symbol="{Binding ElementName=FavoriteButton, Path=IsChecked, Converter={StaticResource FavoriteConverter}}"/>
                    </ToggleButton.Content>
                </ToggleButton>
                <TextBlock Text="Bolo de fubá" Style="{ThemeResource SubheaderTextBlockStyle}" Padding="5,0,0,0"/>
            </StackPanel>-->
                <RelativePanel x:Name="itens" Grid.Row="1" Padding="12,0,0,0">
                    <Viewbox x:Name="viewBoxVideo" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignTopWithPanel="True" MaxHeight="300" Width="430"  Height="320">
                        <WebView x:Name="Video" MinWidth="560" MinHeight="340" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True"/>
                    </Viewbox>
                  
                    <!--<Grid x:Name="infoReceita" RelativePanel.Below="viewBoxVideo" RelativePanel.AlignRightWith="viewBoxVideo" RelativePanel.AlignLeftWith="viewBoxVideo">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <RelativePanel Grid.Column="0">
                            <Image x:Name="image1" Source="ms-appx:///Assets/Square150x150Logo.scale-200.png" Height="60" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                            <TextBlock Text="{x:Bind Path=recpt.Preparo,Converter={StaticResource TimeToStringConverter}}" TextWrapping="WrapWholeWords" RelativePanel.AlignHorizontalCenterWith="image1" RelativePanel.AlignVerticalCenterWith="image1" />
                        </RelativePanel>
                        <RelativePanel Grid.Column="1">
                            <Image x:Name="image2" Source="ms-appx:///Assets/Square150x150Logo.scale-200.png" Height="60" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                            <TextBlock Text="{x:Bind Path=recpt.Cozimento,Converter={StaticResource TimeToStringConverter}}" TextWrapping="WrapWholeWords" RelativePanel.AlignHorizontalCenterWith="image2" RelativePanel.AlignVerticalCenterWith="image2" />
                        </RelativePanel>
                        <RelativePanel Grid.Column="2">
                            <Image x:Name="image3" Source="ms-appx:///Assets/Square150x150Logo.scale-200.png" Height="60" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                            <TextBlock Text="{x:Bind Path=recpt.Pessoas}" TextWrapping="WrapWholeWords" RelativePanel.AlignHorizontalCenterWith="image3" RelativePanel.AlignVerticalCenterWith="image3" />
                        </RelativePanel>
                    </Grid>-->
                    <controls:NumericUpDown x:Name="quantPessoas" ValorMinimo="{x:Bind recpt.Porcoes,Mode=TwoWay}" Porcoes="{x:Bind recpt.PorcoesCalculadas, Mode=TwoWay}" Height="40" Width="430" RelativePanel.Below="viewBoxVideo" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" />
                    <!--<TextBox x:Name="quantPessoas" RelativePanel.AlignLeftWith="viewBoxVideo" RelativePanel.Below="infoReceita" RelativePanel.AlignRightWith="viewBoxVideo"/>-->
                    <!--<ListViewHeaderItem x:Name="comentHead" RelativePanel.Below="quantPessoas" RelativePanel.AlignLeftWith="viewBoxVideo" RelativePanel.AlignRightWith="viewBoxVideo" Padding="0,8,0,0">
                        <TextBlock Text="Dicas úteis!" Foreground="#646464" FontWeight="SemiBold" FontSize="20" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </ListViewHeaderItem>
                    <ListView x:Name="coments" SelectionMode="None" ItemsSource="{x:Bind recpt.ComentariosCollection}" RelativePanel.Below="comentHead" RelativePanel.AlignLeftWith="viewBoxVideo" RelativePanel.AlignRightWith="viewBoxVideo" RelativePanel.AlignBottomWithPanel="True">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="5,1"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Padding="0,10,0,0">
                                    <StackPanel Orientation="Horizontal">
