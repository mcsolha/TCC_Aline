<Page
    x:Class="TCC_Aline.Pages.Receita"
    x:Name="paginaReceita"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="using:TCC_Aline"
    xmlns:local="using:TCC_Aline.Pages"
    xmlns:controls="using:TCC_Aline.UserControls"
    xmlns:converters="using:TCC_Aline.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:TCC_Aline.Model"
    mc:Ignorable="d" SizeChanged="Page_SizeChanged" MinWidth="800" MinHeight="640" RightTapped="paginaReceita_RightTapped">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../ResourceDictionaries/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:FavoriteConverter x:Key="FavoriteConverter"/>
            <converters:TimeToStringConverter x:Name="TimeToStringConverter"/>
            <converters:ColorConverter x:Name="ColorConverter"/>
            <Flyout x:Key="info">
                <TextBlock Text="Clique com o botão direito para visualizar o menu lateral!"/>
            </Flyout>
            <SolidColorBrush x:Key="AzulClaro" Color="#99B5CB" />
            <SolidColorBrush x:Key="AzulDestaque" Color="#748DA2" />

            <!-- Default style for Windows.UI.Xaml.Controls.ListViewHeaderItem -->
            <Style x:Key="noLine" TargetType="ListViewHeaderItem">
                <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
                <Setter Property="FontSize" Value="{ThemeResource ListViewHeaderItemThemeFontSize}" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Margin" Value="0,0,0,4"/>
                <Setter Property="Padding" Value="12,8,12,0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="VerticalContentAlignment" Value="Top" />
                <Setter Property="MinHeight" Value="{ThemeResource ListViewHeaderItemMinHeight}"/>
                <Setter Property="UseSystemFocusVisuals" Value="True" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewHeaderItem">
                            <StackPanel Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter x:Name="ContentPresenter"
                                      Margin="{TemplateBinding Padding}"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      ContentTransitions="{TemplateBinding ContentTransitions}"
                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>         
    </Page.Resources>
    
    <RelativePanel Background="{StaticResource ApplicationPageBackgroundThemeBrush}" Padding="10,2,2,2">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <!--<VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1220"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="lateralMenu.Visibility" Value="Visible"/>
                    </VisualState.Setters>-->
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid x:Name="mainContent" Background="Transparent" RelativePanel.AlignRightWithPanel="False" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignTopWithPanel="True">
            <!--definição das colunas principais-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.02*"/>
                <ColumnDefinition Width="2.2*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Padding="20,0,0,0">
                <Grid.RowDefinitions>
                    <!--cabeçalho receita-->
                    <RowDefinition  x:Name="headHeight" Height="Auto"/>
                    <!--video-->
                    <RowDefinition x:Name="itensHeight"/>
                </Grid.RowDefinitions>
                <ListViewHeaderItem Style="{StaticResource noLine}" Padding="5,28,0,0">
                    <StackPanel Grid.Row="0" Orientation="Horizontal" >
                        <ToggleButton x:Name="FavoriteButton" Style="{StaticResource SymbolButton}" IsChecked="{x:Bind Path=recpt.Favorita,Mode=TwoWay}">
                            <ToggleButton.Content>
                                <SymbolIcon Symbol="{Binding ElementName=FavoriteButton, Path=IsChecked, Converter={StaticResource FavoriteConverter}}"/>
                            </ToggleButton.Content>
                        </ToggleButton>
                        <TextBlock Text="{x:Bind recpt.Nome}" Style="{ThemeResource SubheaderTextBlockStyle}" Foreground="#646464" FontWeight="SemiBold" Padding="5,0,0,0"/>
                    </StackPanel>
                </ListViewHeaderItem>
                <!--<StackPanel Grid.Row="0" Orientation="Horizontal" Padding="20,5">
